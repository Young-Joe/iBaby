<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.FullScreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimationHomeActivity</item>
    </style>

    <!--&lt;!&ndash; 设置FlashActivity主题避免白屏 &ndash;&gt;-->

    <style name="Theme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AnimationHomeActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <!-- 新的activity创建进入效果 -->
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <!-- activity还没有finish()下退出效果 -->
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <!-- 上一个activity返回进入效果 -->
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <!-- activity finish()之后退出效果 -->
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommonEditText">
        <item name="android:textColorHint">@color/txt_normal</item>
        <item name="android:textColor">@color/txt_normal</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PictureChoose" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="bottomToolbar.bg">@color/colorPrimary</item>
        <item name="bottomToolbar.preview.textColor">@color/gray</item>
        <item name="bottomToolbar.apply.textColor">@color/white</item>
        <item name="item.checkCircle.backgroundColor">@color/colorPrimary</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorPrimary</item>
    </style>

    <style name="DivList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/txt_normal</item>
    </style>

    <declare-styleable name="VerticalDashedLine">
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineColor" format="color"/>
    </declare-styleable>

</resources>
